{
	"$schema": "https://biomejs.dev/schemas/1.5.3/schema.json",
	"organizeImports": {
		"enabled": true
	},
  "formatter": {
    "enabled": true,
    "indentSize": 2,
    "indentStyle": "space"
  },
  "javascript": {
    "formatter": {
      "lineWidth": 80,
      "quoteStyle": "single"
    }
  },
	"linter": {
		"enabled": false,
		"rules": {
			"recommended": true
		}
	}
}
